//		res.sendRedirect("sqr?k="+k); //url rewritting
		
		
		
		//another method using session maintaining
		
		HttpSession session = req.getSession();
		session.setAttribute("k", k);
		
		req.sendRedirect("sqr");
		
		
		
	}
